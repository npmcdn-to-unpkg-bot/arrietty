<%= javascript_include_tag "masonry.pkgd.min" %>
<%= stylesheet_link_tag "products", media: "all" %>

<div class="grid" data-masonry='{ "itemSelector": ".grid-item", "gutter": 10, "columnWidth": ".grid-sizer", "percentPosition": true}'>
  <% @products.each do |product| %>
    <div class="grid-sizer"></div>
    <div class="grid-item">
    <%= link_to product, remote: true, class: 'product-dialog-submit' do %>
      <div class="product-card">
        <div class="product-info-container">
          <div class="product-name"><%= product.name %></div>
          <i class="product-status <%= status_icon_classes(product)%>"></i>
        </div>
        <%= image_tag product.image.url(:thumb) %>
      </div>
     <% end %>
    </div>
  <% end %>
</div>

<div class="reveal" id="product-details" data-reveal>
</div>
